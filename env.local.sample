# Sample environment configuration for local development.
# Copy this file to `.env.local` and replace placeholder values.

NODE_ENV=development

# Supabase (public client keys)
NEXT_PUBLIC_SUPABASE_URL="https://YOUR-PROJECT-REF.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="YOUR-PUBLIC-ANON-KEY"

# Supabase (server-side usage)
SUPABASE_URL="https://YOUR-PROJECT-REF.supabase.co"
SUPABASE_SERVICE_ROLE_KEY="YOUR-SERVICE-ROLE-KEY"
SUPABASE_JWT_SECRET="YOUR-JWT-SECRET"

# Supabase Postgres (optional â€“ only needed for direct DB access)
SUPABASE_POSTGRES_HOST="db.YOUR-PROJECT-REF.supabase.co"
SUPABASE_POSTGRES_USER="postgres"
SUPABASE_POSTGRES_PASSWORD="YOUR-POSTGRES-PASSWORD"
SUPABASE_POSTGRES_DATABASE="postgres"
SUPABASE_POSTGRES_URL="postgres://postgres.YOUR-PROJECT-REF:YOUR-POSTGRES-PASSWORD@aws-1-your-region.pooler.supabase.com:6543/postgres?sslmode=require&supa=base-pooler.x"
SUPABASE_POSTGRES_PRISMA_URL="postgres://postgres.YOUR-PROJECT-REF:YOUR-POSTGRES-PASSWORD@aws-1-your-region.pooler.supabase.com:6543/postgres?sslmode=require&pgbouncer=true"
SUPABASE_POSTGRES_URL_NON_POOLING="postgres://postgres.YOUR-PROJECT-REF:YOUR-POSTGRES-PASSWORD@aws-1-your-region.pooler.supabase.com:5432/postgres?sslmode=require"

# Redirect targets (update to match local or deployed hosts)
NEXT_PUBLIC_DEV_SUPABASE_REDIRECT_URL="http://localhost:3000/app"

# Google Maps (optional)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="YOUR-GOOGLE-MAPS-API-KEY"

# Eventbrite API (optional - for language events)
# Get your free API key at: https://www.eventbrite.com/platform/api/
NEXT_PUBLIC_EVENTBRITE_API_KEY="YOUR-EVENTBRITE-API-KEY"

# Google Places API (optional - for finding language schools/cafes)
NEXT_PUBLIC_GOOGLE_PLACES_API_KEY="YOUR-GOOGLE-PLACES-API-KEY"